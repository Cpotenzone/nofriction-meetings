{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "noFriction Meetings",
  "version": "1.0.0-pre.2",
  "identifier": "com.nofriction.meetings",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "noFriction Meetings",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "resizable": true,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Live meeting transcription for macOS",
    "longDescription": "noFriction Meetings captures your screen, system audio, and microphone to provide real-time meeting transcription powered by Deepgram.",
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "12.3"
    }
  }
}